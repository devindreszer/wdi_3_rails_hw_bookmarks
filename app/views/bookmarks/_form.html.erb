<% if @bookmark.errors.any? %>
     <div id="error_explanation">
     <h3><%= pluralize(@bookmark.errors.count, "error") %> prohibited this post from being saved:</h3>
     <ul>
          <% @bookmark.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
          <% end %>
     </ul>
     </div>
<% end %>

<%= form_for bookmark do |f| %>
     <div>
          <%= f.label :title %>
          <%= f.text_field :title %>
     </div>

     <div>
          <%= f.label :category %>
          <%= f.select :category, options_for_select(Bookmark::CATEGORIES) %>
     </div>

     <div>
          <%= f.label :url %>
          <%= f.url_field :url %>
     </div>

     <div>
          <%= f.label "Favorite" %>
          <%= f.check_box :is_favorite %>
     </div>

     <div>
          <%= f.label :comment %>
          <%= f.text_field :comment %>
     </div>

     <%= f.submit class: "small button" %>
<% end %>
