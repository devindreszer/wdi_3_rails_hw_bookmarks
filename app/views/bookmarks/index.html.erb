<div class="row">
  <div class="small-3 columns">
    <aside>
      <ul class="side-nav">Categories
        <li><%= link_to "All", bookmarks_path %></li>
        <% @bookmarks.map(&:category).uniq.sort.each do |category| %>
          <li><%= link_to category, filter: category %></li>
        <% end %>
      </ul>
    </aside>
  </div>

  <div class="small-9 columns">
    <h1>Bookmarks</h1>
    <div>
      <%= render partial: "bookmark", collection: @bookmarks %>
    </div>
  </div>
</div>
